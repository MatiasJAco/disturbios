// ----------------------- Zones -----------------------
zone "chubut.dc.fi.uba.ar" in{
 type slave;
 file "slave/chubut.dc.fi.uba.ar";
 masters{192.168.0.25;};
 allow-notify{192.168.0.25;};
};
// reverse map for local address at chubut.dc.fi.uba.ar
zone "0.168.192.IN-ADDR.ARPA" in{
 type slave;
 file "/etc/bind/db.0.168.192";
 masters{192.168.0.25;};
};

// local host domain (required)
zone "localhost" in{
 type master;
 file "/slave/slave.localhost";
 allow-update{none;};
};
// localhost reverse map
 zone "0.0.127.IN-ADDR.ARPA" in{
 type master;
 file "slave/localhost.rev";
 allow-update{none;};
};
